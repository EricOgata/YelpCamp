<% include ../partials/header %>

<div class="container mt-3">
	<header class="jumbotron">
		<div class="container">
			<h1>Welcome to YelpCamp!</h1>
			<p>View our hand-picked campgrounds from all over the world.</p>
			<p>
				<a class="btn btn-primary btn-lg" href="/campgrounds/new">Add new campground</a>
			</p>
		</div>
	</header>

	<div class="row" style="display: flex; flex-wrap: wrap;">
		<div class="col-lg-12">
			<h3>Our Most Popular Campgrounds!</h3>
		</div>
		<% campgrounds.forEach(function(campground){ %>
			<div class="col-md-3 col-sm-6">
				<div class="card">
					<img src="<%= campground.image %>" class="card-img-top">
					<div class="card-body">
						<h5 class="card-title text-center"><%= campground.name %></h5>
					</div>
					<p class="text-center">
						<a href="/campgrounds/<%= campground._id %>" class="btn btn-sm btn-primary">More Info</a>
					</p>
				</div>				
			</div>
		<% });%>
	</div>
</div>



<% include ../partials/footer %>