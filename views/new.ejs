<% include partials/header %>

<h1>Create a new Campground</h1>

<form action="/campgrounds" method="POST">
	<div class="form-group">
		<label for="campgroudNameInput">Campground Name:</label>
		<input type="text" class="form-control" id="campgroudNameInput" placeholder="Campground Name" name="name">
	</div>
	<div class="form-group">
		<label for="campgroudUrlInput">Campground Picture URL:</label>
		<input type="text" class="form-control" id="campgroudUrlInput" placeholder="Picture URL" name="image">
	</div>
	<button type="submit">Add Campground</button>
</form>
<a href="/campgrounds">All Campgrounds</a>
<% include partials/footer %>